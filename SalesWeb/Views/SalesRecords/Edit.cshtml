@model SalesWeb.Models.ViewModels.SalesRecordViewModel
@{


    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Sales Record</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="SalesRecord.Id" />

            <div class="form-group">
                <label asp-for="SalesRecord.Date" class="control-label"></label>
                <input asp-for="SalesRecord.Date" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SalesRecord.Amount" class="control-label"></label>
                <input asp-for="SalesRecord.Amount" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SalesRecord.Status" class="control-label"></label>
                <input asp-for="SalesRecord.Status" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SalesRecord.SellerId" class="control-label"></label>
                <select asp-for="SalesRecord.SellerId" asp-items="@(new SelectList(Model.Sellers,"Id", "Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

