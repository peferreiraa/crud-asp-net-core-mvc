@{ 
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<div class="row form-inline" >
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend><strong>Search by Date</strong> </legend>
                <div class="form-group mb-2">
                    <label for="minDate" class="control-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="control-label">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group mt-2" style="margin-left: -16px;">
                    <div class="col-lg-10">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row form-inline mt-3" >
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SalesSearchByDepartment">
            <fieldset>
                <legend><strong>Sales search by Department</strong></legend>
                <div class="form-group mb-2">
                    <label for="minDate" class="control-label">Department</label>
                    <div class="col-lg-10">
                        <input type="text" name="Search" class="form-control" />
                    </div>
                </div>
                
                <div class="form-group mt-2" style="margin-left: -16px;">
                    <div class="col-lg-10">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>